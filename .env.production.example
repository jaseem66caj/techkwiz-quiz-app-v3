# ========================================
# TECHKWIZ-V8 PRODUCTION CONFIGURATION
# ========================================
# This file shows the production environment variables
# Copy these to your hosting provider's environment settings

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Production URL
NEXT_PUBLIC_APP_URL=https://play.techkwiz.com

# Application Metadata
NEXT_PUBLIC_APP_NAME=TechKwiz
NEXT_PUBLIC_APP_VERSION=8.0.0

# Environment
NODE_ENV=production

# ========================================
# ERROR MONITORING (REQUIRED)
# ========================================

# Sentry Configuration - REQUIRED for error monitoring
# Get your DSN from https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxx.ingest.sentry.io/xxxxxxx

# Optional: For source maps upload (better error debugging)
SENTRY_ORG=your-org-name
SENTRY_PROJECT=techkwiz-v8
SENTRY_AUTH_TOKEN=your-auth-token

# ========================================
# ANALYTICS CONFIGURATION (OPTIONAL)
# ========================================

# Google Analytics 4
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Enable/Disable Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ========================================
# FEATURE FLAGS
# ========================================

# Disable test pages in production
NEXT_PUBLIC_ENABLE_TEST_PAGES=false

# Enable error tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Disable development features
NEXT_PUBLIC_DEBUG=false

# ========================================
# HOSTING PROVIDER SPECIFIC
# ========================================

# Vercel
# VERCEL_URL=auto-generated
# VERCEL_ENV=production

# Netlify
# NETLIFY_SITE_URL=auto-generated
# CONTEXT=production

# Railway
# RAILWAY_ENVIRONMENT=production

# ========================================
# SETUP INSTRUCTIONS
# ========================================
#
# PRODUCTION DEPLOYMENT:
# 1. Set up Sentry project and get DSN
# 2. Configure Google Analytics (optional)
# 3. Set environment variables on hosting platform
# 4. Deploy using GitHub Actions or manual upload
# 5. Test error monitoring and analytics
#
# REQUIRED VARIABLES:
# - NEXT_PUBLIC_SENTRY_DSN (for error monitoring)
# - NODE_ENV=production
#
# OPTIONAL VARIABLES:
# - NEXT_PUBLIC_ANALYTICS_ID (for analytics)
# - NEXT_PUBLIC_APP_URL (for proper URLs)
# - SENTRY_* variables (for source maps)
#
