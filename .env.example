# ========================================
# TECHKWIZ-V8 ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local and update with your actual values

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DOMAIN=localhost

# Application Metadata
NEXT_PUBLIC_APP_NAME=TechKwiz
NEXT_PUBLIC_APP_VERSION=8.0.0

# Development Configuration
NODE_ENV=development
DISABLE_HOT_RELOAD=false

# ========================================
# ADMIN PANEL CONFIGURATION
# ========================================

# Admin Authentication
# Default password for development: TechKwiz2024!Admin
# IMPORTANT: Change this for production deployments
NEXT_PUBLIC_ADMIN_PASSWORD_HASH=TechKwiz2024!Admin

# Admin Panel Access URLs:
# Development: http://localhost:3001/jaseem
# Production: https://your-domain.com/jaseem

# ========================================
# ANALYTICS CONFIGURATION
# ========================================

# Google Analytics 4
# Get your Measurement ID from Google Analytics dashboard
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager (Optional)
# Get your Container ID from Google Tag Manager
# Format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Enable/Disable Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ========================================
# MONETIZATION CONFIGURATION
# ========================================

# Google AdSense
# Get your Publisher ID from Google AdSense dashboard
# Format: ca-pub-xxxxxxxxxxxxxxxx
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-your-publisher-id

# Enable/Disable AdSense
NEXT_PUBLIC_ENABLE_ADSENSE=false

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================

# Development Server
PORT=3000

# Test Pages (only in development)
NEXT_PUBLIC_ENABLE_TEST_PAGES=true

# ========================================
# FEATURE FLAGS
# ========================================

NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true

# ========================================
# SETUP INSTRUCTIONS
# ========================================
#
# DEVELOPMENT SETUP:
# 1. Copy this file to .env
# 2. Update admin password if needed
# 3. Run: npm run dev
# 4. Access quiz: http://localhost:3001
# 5. Access admin: http://localhost:3001/jaseem
# 6. Admin password: TechKwiz2024!Admin
#
# PRODUCTION SETUP:
# 1. Update all placeholder values
# 2. Set analytics/adsense IDs
# 3. Enable analytics and adsense
# 4. Configure GitHub Secrets
# 5. Deploy via GitHub Actions
#
# ADMIN PANEL FEATURES:
# - Dashboard: Statistics and quick actions
# - Quiz Management: Add/edit/delete questions
# - Reward Configuration: Popup and coin settings
# - Analytics & Integrations: GA4, GTM, AdSense
# - System Settings: App configuration
#
# GITHUB SECRETS FOR DEPLOYMENT:
# - ADMIN_PASSWORD: TechKwiz2024!Admin
# - ANALYTICS_ID: G-XXXXXXXXXX
# - ADSENSE_PUBLISHER_ID: ca-pub-xxxxxxxxxxxxxxxx
# - APP_URL: https://your-domain.com
# - APP_DOMAIN: your-domain.com
# - FTP_HOST, FTP_USERNAME, FTP_PASSWORD
