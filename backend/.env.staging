# Staging Environment Configuration (Production-like with test data)
ENVIRONMENT=staging
DEBUG=false

# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=techkwiz_staging

# Authentication Configuration
JWT_SECRET_KEY=staging-secret-key-256-bit-entropy-required-2025
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production-like authentication (uses bcrypt)
FAST_AUTH=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://staging-api.techkwiz.com

# Frontend Configuration
FRONTEND_URL=https://staging.techkwiz.com
CORS_ORIGINS=["https://staging.techkwiz.com", "https://staging-admin.techkwiz.com"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
BCRYPT_ROUNDS=8
DATABASE_MIN_CONNECTIONS=10
DATABASE_MAX_CONNECTIONS=50

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
HTTPS_ONLY=true
SECURE_COOKIES=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/techkwiz.crt
SSL_KEY_PATH=/etc/ssl/private/techkwiz.key
