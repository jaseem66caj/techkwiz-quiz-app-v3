# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values
ENVIRONMENT=production
DEBUG=false

# Database Configuration
# Use MongoDB Atlas or production MongoDB cluster
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=techkwiz_production

# Authentication Configuration
# Generate a strong 256-bit secret key for production
JWT_SECRET_KEY=CHANGE_ME_TO_STRONG_256_BIT_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production authentication (always uses bcrypt)
FAST_AUTH=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://api.techkwiz.com

# Frontend Configuration
FRONTEND_URL=https://techkwiz.com
CORS_ORIGINS=["https://techkwiz.com", "https://admin.techkwiz.com"]

# Logging Configuration
LOG_LEVEL=WARN
LOG_FORMAT=json

# Performance Configuration
BCRYPT_ROUNDS=12
DATABASE_MIN_CONNECTIONS=20
DATABASE_MAX_CONNECTIONS=100

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
HTTPS_ONLY=true
SECURE_COOKIES=true

# Redis Configuration (required for production)
REDIS_URL=redis://production-redis:6379/0
REDIS_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/techkwiz.crt
SSL_KEY_PATH=/etc/ssl/private/techkwiz.key

# Production Security
ADMIN_EMAIL_VERIFICATION=true
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600

# External Services
SMTP_HOST=smtp.production-email.com
SMTP_PORT=587
SMTP_USERNAME=noreply@techkwiz.com
SMTP_PASSWORD=CHANGE_ME

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
